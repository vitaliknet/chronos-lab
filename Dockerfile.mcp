# Use uv's ARM64 Python base image
FROM --platform=linux/arm64 ubuntu:25.04

WORKDIR /app

RUN apt-get update && apt-get install -y \
    python3 \
    python3-venv \
    curl \
    && rm -rf /var/lib/apt/lists/*

COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

WORKDIR /app

# Copy uv files
COPY pyproject.toml uv.lock README.md ./
COPY arcticdb-linux_aarch64/dist/ ./arcticdb-linux_aarch64/dist/

# Install dependencies
RUN uv sync --frozen --no-dev --no-cache --all-extras

# Copy module
COPY chronos_lab/ ./chronos_lab/

# Expose port
EXPOSE 8000

# Run application
CMD ["uv", "run", "python3", "-m", "chronos_lab.mcp_server"]
